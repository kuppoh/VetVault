<div>
    <form action="/register" method="POST" id="information">
        <p style="color: red;"><%= error ? `${error}` : '' %></p>
        <h1>Create Profile</h1>
        <p>Name: </p> <input type="text" id="name" name="name" placeholder="Full Name" required>
        <p>Email: </p> <input type="email" id="email" name="email" placeholder="Email" required>
        <p>Phone Number: </p> <input type="tel" id="phone" name="phone_number" placeholder="Phone Number" required>
        <p>Password: </p> <input type="password" id="password" name="password" placeholder="Password" required>
        <br><br>
        <button type="submit" id="submit">Submit</button>
        <div>Already have an account?</div>
        <a href="/login">Login</a>
    </form>
</div>